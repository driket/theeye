# config/application.yml
defaults: &defaults
  auth_login: admin
  auth_password: secret
  admin_mail: your@mail.com
  notification_mail: notifications@mail.com
  probe_secret: mysecret

development:
  mailer:
    address: smtp.gmail.com
    port: 587
    domain: theeye.com
    user_name: yourname
    password: yourpass
    authentication: plain
    enable_starttls_auto: false
  <<: *defaults

test:
  <<: *defaults

production:
  <<: *defaults