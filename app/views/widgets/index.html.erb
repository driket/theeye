<% for widget in ::Widget.all %>
  <tr>
    <td><%= widget.title %></td>
    <td><%= widget.data_source.json_url if widget.data_source %></td>
    <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
    <td><%= link_to 'Destroy', widget, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

